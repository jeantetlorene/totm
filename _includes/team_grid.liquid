<div class="team-grid">
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      {% assign members = site.team %}
      {% for member in members %}
        <div class="d-flex justify-content-center team-card" data-association="{{ member.association | downcase }}">
          <a href="{{ member.url | relative_url }}" class="text-decoration-none text-reset w-100">
            <div class="card bg-transparent border-0 text-center w-100 h-100 p-3">
              {% if member.image %}
                <img src="{{ 'assets/img/' | append: member.image | relative_url }}" alt="{{ member.title }}" class="card-img-top rounded-circle mx-auto" style="object-fit: cover; width: 200px; height: 200px;">
              {% endif %}
              <div class="card-body px-0">
                <h3 class="h5 mb-1">{{ member.title }}</h3>
                <p class="text-muted mb-2">{{ member.representation | capitalize }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div> 
</div>
