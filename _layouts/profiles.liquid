---
layout: page
---
<div class="post">
  
  <article>
    {{ content }}
  </article>
  

  <!-- Team Section -->
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <!-- Team Filters -->
          <div class="team-filters text-center mb-5">
            <button class="btn btn-sm btn-primary m-1 filter-btn active" data-filter="all">All</button>
            <button class="btn btn-sm btn-outline-primary m-1 filter-btn" data-filter="bureau">bureau</button>
            <button class="btn btn-sm btn-outline-primary m-1 filter-btn" data-filter="ca">CA</button>
          </div>

          {% include team_grid.liquid %}
        </div>
      </div>
    </div>
  </section>
</div>


<script>
  console.log("Filtering script is running!");
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".filter-btn");
    const cards = document.querySelectorAll(".team-card");

    buttons.forEach(button => {
      button.addEventListener("click", function () {
        // Remove "active" class from all buttons
        buttons.forEach(btn => btn.classList.remove("active"));
        this.classList.add("active");

        const filter = this.getAttribute("data-filter");

        cards.forEach(card => {
          const association = card.getAttribute("data-association");
          if (filter === "all" || filter === association) {
            card.style.display = "flex"; // d-flex card wrapper
          } else {
            card.style.display = "none";
          }
        });
      });
    });
  });
</script>