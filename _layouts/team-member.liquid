---
layout: default
---

<section class="section">
  <div class="container">
    <div class="row">
      <!-- Left column: profile image and basic info -->
      <div class="col-lg-4 text-center mb-4 mb-lg-0">
        {% if page.image %}
          <img src="{{ 'assets/img/' | append: page.image | relative_url }}" alt="{{ page.title }}" class="img-fluid z-depth-1
      rounded>
        {% endif %}

        
        <p class="text-muted text-capitalize">{{ page.representation }}</p>

        {% if page.email %}
        <p><i class="fas fa-envelope me-2"></i><a href="mailto:{{ page.email }}">{{ page.email }}</a></p>
        {% endif %}

        {% if page.website %}
        <p><i class="fas fa-globe me-2"></i><a href="{{ page.website }}" target="_blank">Personal Website</a></p>
        {% endif %}

        {% if page.social %}
        <div class="social-icons mt-4">
          {% for social in page.social %}
            <a href="{{ social.link }}" class="me-3" target="_blank"><i class="{{ social.icon }} fa-lg"></i></a>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      <!-- Right column: research areas and content -->
      <div class="col-lg-8">
        <div>
          <h3 class="mb-4">{{ page.title }}</h3>
            {% if page.research_areas %}
              <div>{% for area in page.research_areas %}
                <span class="badge bg-light text-dark me-2 mb-2 p-2">{{ area }}</span>
              {% endfor %}
             </div>
            {% endif %}
        </div>
        <div class="content">
          {{ content }}
        </div>
      </div>
    </div>
  </div>
</section>


