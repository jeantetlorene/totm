---
layout: default
---
<div class="post">
  
  {% if page.top_image %}
    <div class="top-banner" style="background-image: url('{{ 'assets/img/' | append: page.top_image | relative_url }}');">
      <div class="top-banner-overlay">
        <div class="top-banner-content container">
          <h2 class="mb-4" style="color: white ! important; font-size: 2rem; margin-bottom: 2rem; margin-top: -10vh;">
            <em>«L’océan nous relie, veillons sur ses doyennes»</em>
          </h2>
          <h1 class="display-4 text-white font-weight-bold mb-3">TRANS OCÉANS TORTUES MARINES</h1>
          <p class="lead text-white">Les acteurs des territoires français pour la conservation des tortues marines à travers le monde</p>
        </div>
      </div>
    </div>
  {% endif %}


  <article>
    <div class="text-center my-5 px-3" style="max-width: 800px; margin-left: auto; margin-right: auto;">
      <p class="lead" style="font-size: 1.75rem;">
         {{ content }}
      </p>
    </div>

    {% if page.banners %}
      {% for banner in page.banners %}
        <section class="section bg-light my-5">
          <div class="container">
            <div class="row align-items-center justify-content-center">
              {% assign image_left = banner.image_position == "left" %}
              
              {% if image_left %}
                <!-- Image first -->
                <div class="col-lg-6 text-center mb-4 mb-lg-0">
                  <img src="{{ 'assets/img/' | append: banner.image | relative_url }}" alt="banner image" style="max-width: 550px;">
                </div>
                <div class="col-lg-6 col-md-10">
                  <div class="pe-0 pe-lg-5 text-center text-lg-start">
                    <h1 class="section-title h2">{{ banner.title }}</h1>
                    <p class="mb-5">{{ banner.content }}</p>
                    {% if banner.button and banner.button.enable %}
                      <a href="{{ banner.button.link | relative_url }}" title="{{ banner.button.label }}" class="btn btn-outline-primary">
                        {{ banner.button.label }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              {% else %}
                <!-- Text first -->
                <div class="col-lg-6 col-md-10 mb-4 mb-lg-0">
                  <div class="pe-0 pe-lg-5 text-center text-lg-start">
                    <h1 class="section-title h2">{{ banner.title }}</h1>
                    <p class="mb-5">{{ banner.content }}</p>
                    {% if banner.button and banner.button.enable %}
                      <a href="{{ banner.button.link | relative_url }}" title="{{ banner.button.label }}" class="btn btn-outline-primary">
                        {{ banner.button.label }}
                      </a>
                    {% endif %}
                  </div>
                </div>
                <div class="col-lg-6 text-center">
                  <img src="{{ 'assets/img/' | append: banner.image | relative_url }}" alt="banner image" style="max-width: 550px;">
                </div>
              {% endif %}
            </div>
          </div>
        </section>
      {% endfor %}
    {% endif %}

    {% if page.clients_logo_slider.enable %}
      <section class="section overflow-hidden my-5">
        <div class="container">
          <div class="row">
            <div class="col-12 text-center mb-5">
              <h2 class="h6">{{ page.clients_logo_slider.title }}</h2>
            </div>
            <div class="col-12">
              <div class="swiper brand-carousel">
                <div class="swiper-wrapper">
                  {% for logo in page.clients_logo_slider.logos %}
                    <div class="swiper-slide brand-item d-flex align-items-center justify-content-center">
                      <img src="{{ 'assets/img/' | append: logo | relative_url }}" alt="Brands logo" height="35">
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    {% endif %}


    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
